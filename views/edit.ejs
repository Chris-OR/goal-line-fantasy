<%- include("partials/header"); -%>
<br>
<br>

<div class="container">
    <h1>Compose</h1>
<form class="" action="/edit" method="post">
    <div class="form-group">
        <label>ID</label>
        <input value="<%= post._id %>" class="form-control" type="text" name="postID">
      </div>
  <div class="form-group">
    <label>Image URL</label>
    <input value="<%= post.image %>" class="form-control" type="text" name="postImage">
  </div>    
  <div class="form-group">
    <label>Title</label>
    <input value="<%= post.title %>" class="form-control" type="text" name="postTitle">
  </div>
  <div class="form-group">
    <label>Blurb</label>
    <textarea class="form-control" name="postBlurb" rows="2"><%= post.blurb %></textarea>
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" name="postContent" rows="10"><%= post.content %></textarea>
  </div>
  <br>
  <button value="submit" class="btn btn-danger" type="submit" name="button">Publish</button>
  <button value="preview" class="btn btn-danger" type="submit" name="button">Preview</button>
</form>
</div>


<%- include("partials/footer"); -%>