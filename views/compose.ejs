<%- include("partials/header"); -%>
<br>
<br>

<div class="container">
    <h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label>Season (ex: 2021-2022)</label>
    <input class="form-control" type="text" name="season">
  </div>
  <div class="form-group">
    <label>Tag (ex: pre-season primer, in-season article)</label>
    <input class="form-control" type="text" name="tag">
  </div>
  <div class="form-group">
    <label>Image URL</label>
    <input class="form-control" type="text" name="postImage">
  </div>
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle">
  </div>
  <div class="form-group">
    <label>Blurb</label>
    <textarea class="form-control" name="postBlurb" rows="2"></textarea>
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" name="postContent" rows="10"></textarea>
  </div>
  <br>
  <button value="submit"class="btn btn-danger" type="submit" name="button">Publish</button>
  <button value="preview"class="btn btn-danger" type="submit" name="button">Preview</button>
</form>
</div>


