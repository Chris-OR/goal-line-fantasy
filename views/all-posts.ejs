<%- include('partials/header') %>

<br>
<br>
<br>

<div class="container">
    <h2>Pre-Season Primers</h2>
    <br>
    <% posts.splice(0).reverse().forEach(function(post) { %>
        <div class="post-intro">
            <a class="title-link" href="/posts/<%=post.title%>"><h5><%= post.title %></h5></a>
            <p><%= post.date %></p>
            <form action="/update" method="post">
            <button onClick="return confirm('Are you sure that you want to delete this?')" value="<%= post._id %>" class="btn btn-danger" type="submit" name="delete"><i class="fas fa-trash"></i> Delete</button>
            <button value="<%= post._id %>" class="btn btn-danger" type="submit" name="edit"><i class="fas fa-pen"></i> Edit</button>
        </form>
        </div>
        
        <% if (post.blurb.length >= 300) { %>
          <p><%= post.blurb.substring(0, 300) %>
            ...<a class="title-link" href="/posts/<%=post.title%>"> Read More</a>
          </p>
        <% } else { %>
          <p><%= post.blurb %>
            <a class="title-link" href="/posts/<%=post.title%>">Read More</a>
          </p>
        <% } %>
        <br>
      <% }); %>
</div>


